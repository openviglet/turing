<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="urn:activemq">
    <management>
        <jmx-management-enabled>true</jmx-management-enabled>
    </management>
    <address-settings>
        <address-setting match="#">
            <max-size-bytes>104857600</max-size-bytes>            <!-- 100MB -->
            <page-size-bytes>1048576</page-size-bytes>            <!-- 1MB -->
            <max-large-message-size>524288</max-large-message-size>            <!-- 512KB -->
        </address-setting>
    </address-settings>
</configuration>